{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": true,
    "watch": false,
    "allowJs": true,
    "checkJs": false,
    "types": ["vite/client"],
    "jsx": "preserve",
    "removeComments": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./",
    "paths": {
      "@": ["./src/"],
      "@/*": ["src/*"],
      "src": ["./src/"]
    },
    "resolveJsonModule": true,
    "typeRoots": ["./types"],
    "allowSyntheticDefaultImports": true
  },
  "vueCompilerOptions": {
    "target": 2.7,
    "extensions": [".vue"]
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": [
    "node_modules",
    "logs",
    "dist",
    "vite.config.ts",
    "volar.config.ts",
    "components.d.ts"
  ]
}
